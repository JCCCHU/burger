<h1>Eattaburger!</h1>

<h2>Ready to eat</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li class="made-burger" data-id="{{id}}">
        {{name}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Make a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
